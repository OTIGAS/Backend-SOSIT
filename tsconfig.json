{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@repositories/*": [
        "repositories/*"
      ],
      "@use-case/*": [
        "use-case/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@env/*": [
        "env/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/in-memory-*.ts"
  ]
}